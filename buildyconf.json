{
    // Every key in this object can be called explicitly from the Buildy shell.
    "commands": {
        "clean":
            "clear && make clean && echo && echo 'Build erased.'",

        "build":
            "clear && make && echo && echo 'Build passing.'",

        "rebuild":
            "clear && make clean && cmake . && make && echo && echo 'Build passing.'",

        "run":
            "clear && ab 10 > /dev/null && echo && ./spacerank && echo && ab 10 > /dev/null && echo && echo 'Process exited.'",

        "status":
            "clear && git status",

        "diff":
            "clear && git diff"
    },

    // This command will be run when a file is changed.
    "run_on_changes": "build",

    // This command will be run when Buildy is started.
    "run_on_start": "rebuild",

    "watch_pattern": "^src/\\w+\\.(cpp|h(\\.in)?)$"
}
